// Zellij Configuration
// See https://zellij.dev/documentation/configuration.html

theme "catppuccin-mocha"
default_layout "compact"
mouse_mode true
copy_on_select true
scroll_buffer_size 100000

// Define Catppuccin Mocha theme
themes {
    catppuccin-mocha {
        bg "#585b70" // Surface2
        fg "#cdd6f4"
        red "#f38ba8"
        green "#a6e3a1"
        blue "#89b4fa"
        yellow "#f9e2af"
        magenta "#f5c2e7"
        orange "#fab387"
        cyan "#94e2d5"
        black "#181825" // Mantle
        white "#bac2de"
    }
}

keybinds {
    shared_except "locked" {
        bind "Alt t" { NewTab; }
        bind "Alt w" { CloseFocus; }
        bind "Alt \\" { NewPane "Right"; }
        bind "Alt -" { NewPane "Down"; }
    }
}

ui {
    pane_frames {
        rounded_corners true
        hide_session_name true
    }
}
